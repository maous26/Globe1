# server/Dockerfile
FROM node:18-alpine

# Create app directory
WORKDIR /usr/src/app

# Install app dependencies
COPY package*.json ./
RUN npm install

# Bundle app source
COPY . .

# Create data directory for baggage policies
RUN mkdir -p data

# Create templates directory for emails
RUN mkdir -p templates/emails

# Expose port
EXPOSE 5000

# Start command
CMD ["npm", "start"]